<h1>Pay a bill</h1>
<% if @errors && !@errors.empty? %>
  <div class="alert alert-danger container-offset" role="alert">
    This form contains the following errors:
    <ul>
      <% @errors.each do |error| %>
        <li><%= error %></li>
      <% end %>
    </ul>
  </div>
<% end %>
<form method="POST" class="form-inline container-offset">
  <span class="mr-sm-3">Pay</span>
  <label class="sr-only" for="to_pay">To pay</label>
  <div class="input-group mr-sm-3">
    <div class="input-group-prepend">
      <div class="input-group-text">$</div>
    </div>
    <input type="text" class="form-control" id="to_pay" name="to_pay" placeholder="To pay" value="<%= @to_pay || 0 %>" required>
  </div>
  <span class="mr-sm-4">of the remaining $<%= @bill.remaining %></span>
  <button type="submit" class="btn btn-warning">Pay</button>
</form>